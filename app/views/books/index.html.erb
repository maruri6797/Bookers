<h1 class="title">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book) %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?"%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<h2>New book</h2>

  <% if @book.errors.any? %>
  <div class="error">
    <p class="alert"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
     <ul>
      <div class="message">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    </ul>
  </div>
  <% end %>


<%= form_with model: @book do |f| %>
  <p class="paragraph">Title</p>
  <%= f.text_field :title %>
  <div class="box">
    <p class="paragraph">Body</p>
    <%= f.text_area :body %>
  </div>
  <p><%= f.submit 'Create Book' %></p>
<% end %>
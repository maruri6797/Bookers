<h1 class="title">Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error">
    <p class="alert"><%= pluralize(@book.errors.count, "error") %> prohibited book from being saved:</p>
    <ul>
      <div class="message">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </div>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="box">
    <p class="paragraph">Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="box">
    <p class="paragraph">Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="box">
    <p><%= f.submit 'Update Book' %></p>
  </div>
<% end %>

<span><%= link_to 'Show', book_path %> | </span><span><%= link_to 'Back', books_path %></span>
